#!/bin/bash

# ping.test

# defaults
server=www.wolfssl.com
tries=2

# populate args
if [ "$#" -gt 1 ]; then
    tries=$2
fi
if [ "$#" -gt 0 ]; then
    server=$1
fi

# determine os
OS="`uname`"
case $OS in
    MINGW* | MSYS*) PINGSW=-n ;;
    *) PINGSW=-c ;;
esac

# is our desired server there?
ping $PINGSW $tries $server
RESULT=$?
[ $RESULT -ne 0 ] && echo -e "\n\nCouldn't find $server, skipping" && exit 1

exit 0
